#: kivy 1.11.1

<WidgetGalaxy>:
    cols: 4
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint:None, 1
        width: "100dp"
    Button: 
        text: "Count"
        on_press: root.on_button_click()
        disabled: not root.counter_enabled
    Label:
        id: count
        text: root.my_text
        font_name: "./fonts/Lcd.ttf"
        font_size: "50dp"
        color: 1, .3, 1, 1
    Button:
        text: "Reset counter"
        on_press: root.on_button_reset_count()
        size_hint: None, None
        #width: "100dp"
        height: "50dp"
        disabled: not root.counter_enabled
    Switch:
        id: my_switch
        size_hint: None, 1
        width: "100dp"
        active: False
    Slider:
        id: my_slider
        orientation: "vertical"
        min: 0
        max: 100 
        value: 50
        disabled: not my_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            id: slide
            text: str(int(my_slider.value))
        ProgressBar:
            max: 100
            value: my_slider.value
    Button:
        text: "Reset Slider"
        on_press: root.on_button_reset_slider()
        size_hint: None, None
        width: "100dp"
        height: "50dp"
        disabled: not my_switch.active   
         
    TextInput:
        id: my_text_input
        hint_text: "Your name..."
        size_hint: None, None
        height: "50dp"
        width: "100dp"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        id: txt
        text: "Your name is: " + root.text_input_str
    Label:
        text: ""
    Button:
        text: "Reset details"
        on_press: root.on_button_reset_details()
        size_hint: None, None
        width: "100dp"
        height: "50dp"